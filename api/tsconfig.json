{
  "compilerOptions": {
    "target": "es2019",                          
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",                            
    "strict": true,                           
    "sourceMap": true,
    "esModuleInterop": true,                    
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}