{
  "compilerOptions": {
    "target": "es2019",                          // More modern target
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",                            // Changed to allow shared folder access
    "strict": true,                             // Better type safety
    "sourceMap": true,
    "esModuleInterop": true,                    // Better module compatibility
    "skipLibCheck": true,                       // Faster builds
    "forceConsistentCasingInFileNames": true    // Prevents case-sensitivity issues
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}